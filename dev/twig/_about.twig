<section id="chi-siamo">
  <div class="container">
    <div class="row">
      {% for company in metadata.companies.list %}
        <div class="col-sm-3 portfolio-item">
          <a href="#portfolioModal{{ loop.index }}" class="portfolio-link" data-toggle="modal">
            <img src="{{ relativePath }}img/company/{{ company.image }}" class="img-responsive" alt="">
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% for company in metadata.companies.list %}
  <div class="portfolio-modal modal fade" id="portfolioModal{{ loop.index }}" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-content">
      <div class="close-modal" data-dismiss="modal">
        <div class="lr">
          <div class="rl"></div>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-lg-offset-2">
            <div class="modal-body">
              <h2>Profilo</h2>
              <hr class="star-primary">
              <img src="{{ relativePath }}img/company/{{ company.image }}" class="modal-company-image" alt="">
              <p class="text-justify">
                {{ company.description }}
              </p>
              <ul class="list-inline item-details">
                <li>
                  URL:
                  <strong>
                    <a href="{{ company.url }}" target="_blank">{{ company.url|replace({'http://': '', 'https://': '', 'www.': ''}) }}</a>
                  </strong>
                </li>
                <li>
                  Tel:
                  <strong>
                    <a href="tel:{{ company.phone|replace({' ': ''}) }}">{{ company.phone }}</a>
                  </strong>
                </li>
                <li>Email:
                  <strong>
                    <a href="mailto:{{ company.email }}">{{ company.email }}</a>
                  </strong>
                </li>
              </ul>
              <button type="button" class="btn btn-default" data-dismiss="modal">
                <i class="fa fa-times"></i>
                Chiudi</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endfor %}
